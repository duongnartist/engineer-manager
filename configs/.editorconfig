# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

[*.{yml,yaml,json,xml,md}]
indent_size = 2

[*.{kt,kts}]
indent_size = 4
continuation_indent_size = 4

[*.swift]
indent_size = 4

[*.dart]
indent_size = 2